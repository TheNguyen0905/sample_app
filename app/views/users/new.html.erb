<% provide :title, t("user.new.sign_up") %>
<h1><%= t "user.new.sign_up" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name, t("user.new.name") %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.label :password, t("user.new.passowrd") %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.label :password_confirmation, t("user.new.password_confirmation") %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <%= f.submit t("user.new.create_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>